<%= form_with model: @teacher do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% @teacher.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :subject %><br>
    <%= form.text_area :subject %><br>
    <% @teacher.errors.full_messages_for(:subject).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :status %><br>
    <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
